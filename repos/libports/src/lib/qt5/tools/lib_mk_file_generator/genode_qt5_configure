#!/bin/sh

../qt-everywhere-opensource-src-5.5.0/configure \
    -opensource \
    -confirm-license \
    -qconfig genode \
    -xplatform genode-g++ \
    -qpa minimal \
    -no-separate-debug-info \
    -opengl desktop \
    -openssl-linked \
    -reduce-relocations \
    -no-accessibility \
    -no-cups \
    -no-dbus \
    -no-iconv \
    -no-largefile \
    -no-nis \
    -no-pkg-config \
    -no-xcb \
    -no-sse2 \
    -no-sse3 \
    -no-ssse3 \
    -no-sse4.1 \
    -no-sse4.2 \
    -no-avx \
    -make tools \
    -nomake examples \

#
# notes
#
# - '-no-opengl' would prevent the generation of qtwebkit Makefiles
#
#
